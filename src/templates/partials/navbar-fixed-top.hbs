---
component: navbar
---
<!-- BEGIN #header -->
  <div id="header">
    
    <div id="header-inner">
    
    <!-- BEGIN #top-bar -->
    <div id="top-bar" class="clearfix">
      
      <div class="top-inner">
      
        <ul class="social-icons fl">
          <li><a href="https://www.facebook.com/elirada.mr" target="_blank"><span id="facebook_icon"></span></a></li>
          <li><a href="#"><span id="twitter_icon"></span></a></li>
          <li><a href="#"><span id="googleplus_icon"></span></a></li>
          <li><a href="#"><span id="youtube_icon"></span></a></li>
          <li><a href="#"><span id="rss_icon"></span></a></li>
        </ul>
      
        <ul class="top-menu fr">
          <li><a href="#">تطوع_معنا</a><span>/</span></li>
          <li><a href="#">إتصل_بنا</a></li>
        </ul>
      </div>
    
    <!-- END #top-bar -->
    </div>
    
    <div class="title-wrapper clearfix">
    
      <div id="title" class="fl">
        <h1>
          <a href="index.html">{{site.title}}</a>
        </h1>
      </div>
    
      <div class="donate-btn fr">
        <div class="donate-right">
          <div class="donate-right-inner"></div>
        </div>
        <a href="#" class="donate-mid"><span>تبرع الآن</span></a>
        <div class="donate-left"></div>
      </div>
    
    </div>  
    
    <div id="main-menu-wrapper" class="clearfix">
      <ul id="main-menu" class="fl">
      {{#each menu}}
      {{#each pages}}
      {{#is data.parent null}}
        <li class="{{#is data.title ../../../title}}current_page_item{{/is}} {{#is data.title ../../../parent}}current_page_item{{/is}}">
          <a href="{{> page-link}}">{{data.title}}</a>
            {{#if data.hasChildren}}
            <ul>
            {{#each ../../../pages}}
            {{#is data.parent ../data.title}}
            <li><a href="{{> page-link}}">{{data.title}}</a></li>
            {{/is}}
            {{/each}}
            </ul>
            {{/if}}
          </li>
      {{/is}}
      {{/each}}
      {{/each}}
      </ul>
      
    </div>
  
    <!-- END #header-inner -->
    </div>
  
  <!-- END #header -->
  </div>